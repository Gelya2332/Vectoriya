<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:backgroundTint="#85d979"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@drawable/frame"
    >
        <TextView
            android:textSize="40sp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_position_person"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf = "@id/icon_rating"
            />
        <View
            android:id="@+id/line1"
            android:backgroundTint="@color/Green_btn"
            android:background="@drawable/rectangle"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
        <View
            android:id="@+id/line2"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/Red_btn"
            android:layout_width="10dp"
            android:layout_height="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <ImageView
            android:id="@+id/icon_rating"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/exit_main"
            />
        <TextView
            android:textSize="14sp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_rating"
            android:text="12988"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
</androidx.constraintlayout.widget.ConstraintLayout>