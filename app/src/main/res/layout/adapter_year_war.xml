<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    >

    <TextView
        android:id="@+id/year_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rectangle"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:paddingLeft="30dp"
        android:backgroundTint="@color/Green_btn"/>
    <ImageButton
        android:id="@+id/flag_btn"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/Red_btn"
        android:background="@drawable/rectangle"
        android:layout_width="60dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/year_btn"
        app:layout_constraintBottom_toBottomOf="@id/year_btn"
        app:layout_constraintEnd_toEndOf="@id/year_btn"/>
</androidx.constraintlayout.widget.ConstraintLayout>