<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/frame"
    android:backgroundTint="#ffe2b8"
    android:id="@+id/Exit_frame_card"
    android:layout_width="300dp"
    android:layout_height="300dp"
    >
    <ImageView
        android:id="@+id/exclamation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/interrogation"
    />
    <TextView
        android:id="@+id/exit_question"
        app:layout_constraintTop_toBottomOf="@id/exclamation"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Хотите выйти из игры?"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/Yes_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/No_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Да"
        android:backgroundTint="@color/Green_btn"/>
    <Button
        android:id="@+id/No_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/Yes_btn"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нет"
        android:backgroundTint="@color/Red_btn"/>
</androidx.constraintlayout.widget.ConstraintLayout>